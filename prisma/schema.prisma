generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/* =========================
   ENUMS
========================= */

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

enum CategoryType {
  INCOME
  EXPENSE
  TRANSFER
}

/* =========================
   NEXTAUTH MODELS
========================= */

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  passwordHash  String?

  accounts      Account[]
  sessions      Session[]

  wallets       Wallet[]
  categories    Category[]
  transactions  Transaction[]
  budgets       Budget[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/* =========================
   WALLET
========================= */

model Wallet {
  id        String   @id @default(cuid())
  name      String
  balance   Decimal  @default(0)
  userId    String

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions  Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

/* =========================
   CATEGORY (WITH SUBCATEGORY)
========================= */

model Category {
  id          String        @id @default(cuid())
  name        String
  type        CategoryType
  userId      String

  parentId    String?
  parent      Category?     @relation("CategoryToCategory", fields: [parentId], references: [id])
  children    Category[]    @relation("CategoryToCategory")

  transactions Transaction[]
  budgets      Budget[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([parentId])
}

/* =========================
   TRANSACTION
========================= */

model Transaction {
  id            String           @id @default(cuid())
  amount        Decimal
  name          String
  date          DateTime
  type          TransactionType
  isCounted     Boolean          @default(true)

  userId        String
  walletId      String
  categoryId    String?

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  wallet   Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)
  category Category?@relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([walletId])
  @@index([categoryId])
  @@index([date])
}

/* =========================
   BUDGET
========================= */

model Budget {
  id          String   @id @default(cuid())
  amount      Decimal
  month       Int      // 1 - 12
  year        Int

  userId      String
  categoryId  String

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, categoryId, month, year])
}
